    "basePath": "/api/v1/posts",
    "paths": {
        "/": {
            "post": {
                "tags": [
                    "bapi/controllersMainController"
                ],
                "description": "create new post",
                "operationId": "MainController.CreatePost",
                "parameters": [
                    {
                        "in": "body",
                        "name": "body",
                        "description": "json post body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/models.Post"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "body is empty"
                    },
                    "500": {
                        "description": "body is empty"
                    }
                }
            }
        },
        "/{id}": {
            "delete": {
                "tags": [
                    "bapi/controllersMainController"
                ],
                "description": "delete post",
                "operationId": "MainController.DeletePost",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "description": "ID of the post",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "body is empty"
                    },
                    "404": {
                        "description": "not found"
                    },
                    "500": {
                        "description": "body is empty"
                    }
                }
            }
        }
    },
    "definitions": {
        "models.Post": {
            "title": "Post",
            "type": "object",
            "properties": {
                "body": {
                    "$ref": "#/definitions/template.HTML"
                },
                "id": {
                    "type": "string"
                },
                "summary": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "primitive.ObjectID": {
            "title": "ObjectID",
            "type": "object"
        },
        "template.HTML": {
            "title": "HTML",
            "type": "object"
        }
    },
    "tags": [
        {
            "name": "bapi/controllersMainController",
            "description": "MainController is.\n"
        }
    ]
